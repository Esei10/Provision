---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: dash-cert
  namespace: traefik
spec:
  commonName: 'dash.{{ dns_domain }}'
  dnsNames:
    - dash.{{ dns_domain }}
  issuerRef:
    name: ipa
    kind: ClusterIssuer
  privateKey:
    algorithm: RSA
    encoding: PKCS1
    size: 4096
  secretName: dash-cert
