vrrp_instance VI_1 {
    state {{ role | upper }}
    interface {{ interface }}
    virtual_router_id {{ vrid }}
    priority {{ master_priority if role == "master" else backup_priority }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ auth_pass }}
    }
    virtual_ipaddress {
        {{ vip }}
    }
}