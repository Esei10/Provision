---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: ipa
  namespace: cert-manager
spec:
  acme:
    email: cert-manager@example.com
    server: "{{ certManager_acme_server }}"
    privateKeySecretRef:
      name: ipa-issuer-account-key
    solvers:
      - dns01:
          rfc2136:
            nameserver: "{{ certManager_nameserver_ip }}"
            tsigKeyName: k8s-cert-manager
            tsigAlgorithm: HMACSHA256
            tsigSecretSecretRef:
              name: ipa-tsig
              key: tsig-secret-key
